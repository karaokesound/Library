<UserControl x:Class="Library.UI.View.Components.ForYouPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Library.UI.View.Components"
             mc:Ignorable="d" 
             FontFamily="Rubik"
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <!--// for you - text //-->
            <TextBlock Text="For you"
                       Foreground="White"
                       HorizontalAlignment="Left"
                       FontSize="20" />

            <!--// for you - books //-->
            <Grid Grid.Row="1"
                  Margin="0 10 0 0"
                  Width="910"
                  Height="110"
                  HorizontalAlignment="Center"
                  TextBlock.Foreground="White">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <!--// book 1 //-->
                <Border Width="150"
                        BorderBrush="White"
                        BorderThickness="2"
                        CornerRadius="14">
                    <Border.Background>
                        <ImageBrush ImageSource="https://i.pinimg.com/originals/36/90/ee/3690eea4c1aa0ae57265f07285eb92c3.png"
                                    Opacity="0.9"
                                    Stretch="UniformToFill"
                                    AlignmentY="Top" />
                    </Border.Background>
                </Border>
                
                <Grid>
                    <Border Background="#1b2631"
                            Opacity="0.9"
                            VerticalAlignment="Bottom"
                            Height="20"
                            Width="140"
                            CornerRadius="0 0 14 14" />
                    <TextBlock Text="{Binding RandomBookList[0].Title, UpdateSourceTrigger=PropertyChanged}"
                               FontSize="14"
                               VerticalAlignment="Bottom"
                               HorizontalAlignment="Center"
                               Width="145"
                               Margin="1.5 3 1.5 3"/>
                </Grid>

                <!--// book 2 //-->
                <Border Grid.Column="1"
                        Width="150"
                        BorderBrush="White"
                        BorderThickness="2"
                        CornerRadius="14">
                    <Border.Background>
                        <ImageBrush ImageSource="https://m.media-amazon.com/images/I/71jLBXtWJWL._AC_UF1000,1000_QL80_.jpg"
                                    Opacity="0.9"
                                    Stretch="UniformToFill"
                                    AlignmentY="Top" />
                    </Border.Background>
                </Border>
                
                <Grid Grid.Column="1">
                    <Border Background="#1b2631"
                            Opacity="0.9"
                            VerticalAlignment="Bottom"
                            Height="20"
                            Width="140"
                            CornerRadius="0 0 14 14" />
                    <TextBlock Text="{Binding RandomBookList[1].Title, UpdateSourceTrigger=PropertyChanged}"
                               FontSize="14"
                               VerticalAlignment="Bottom"
                               HorizontalAlignment="Center"
                               Width="135"
                               Margin="1.5 3 1.5 3"/>
                </Grid>

                <!--// book 3 //-->
                <Border Grid.Column="2"
                        Width="150"
                        BorderBrush="White"
                        BorderThickness="2"
                        CornerRadius="14">
                    <Border.Background>
                        <ImageBrush ImageSource="https://www.thoughtco.com/thmb/dbFTerm-8CCGlvFHiV9_yq58h_w=/1500x0/filters:no_upscale():max_bytes(150000):strip_icc()/the-da-vinci-code-589f9cee3df78c4758a2d9e7.jpg"
                                    Opacity="0.9"
                                    Stretch="UniformToFill"
                                    AlignmentY="Top" />
                    </Border.Background>
                </Border>
                
                <Grid Grid.Column="2">
                    <Border Background="#1b2631"
                            Opacity="0.9"
                            VerticalAlignment="Bottom"
                            Height="20"
                            Width="140"
                            CornerRadius="0 0 14 14" />
                    <TextBlock Text="{Binding RandomBookList[2].Title, UpdateSourceTrigger=PropertyChanged}"
                               FontSize="14"
                               VerticalAlignment="Bottom"
                               HorizontalAlignment="Center"
                               Width="135"
                               Margin="1.5 3 1.5 3"/>
                </Grid>

                <!--// book 4 //-->
                <Border Grid.Column="3"
                        Width="150"
                        BorderBrush="White"
                        BorderThickness="2"
                        CornerRadius="14">
                    <Border.Background>
                        <ImageBrush ImageSource="https://images-platform.99static.com//fju0F_42vCnKx7hIKOAdCIXLzoY=/fit-in/500x500/99designs-contests-attachments/57/57130/attachment_57130456"
                                    Opacity="0.9"
                                    Stretch="UniformToFill"
                                    AlignmentY="Top" />
                    </Border.Background>
                </Border>
                
                <Grid Grid.Column="3">
                    <Border Background="#1b2631"
                            Opacity="0.9"
                            VerticalAlignment="Bottom"
                            Height="20"
                            Width="140"
                            CornerRadius="0 0 14 14" />
                    <TextBlock Text="{Binding RandomBookList[3].Title, UpdateSourceTrigger=PropertyChanged}"
                               FontSize="14"
                               VerticalAlignment="Bottom"
                               HorizontalAlignment="Center"
                               Width="135"
                               Margin="1.5 3 1.5 3"/>
                </Grid>

                <!--// book 5 //-->
                <Border Grid.Column="4"
                        Width="150"
                        BorderBrush="White"
                        BorderThickness="2"
                        CornerRadius="14">
                    <Border.Background>
                        <ImageBrush ImageSource="https://2f96be1b505f7f7a63c3-837c961929b51c21ec10b9658b068d6c.ssl.cf2.rackcdn.com/products/004595.jpg"
                                    Opacity="0.9"
                                    Stretch="UniformToFill"
                                    AlignmentY="Top" />
                    </Border.Background>
                </Border>
                
                <Grid Grid.Column="4">
                    <Border Background="#1b2631"
                            Opacity="0.9"
                            VerticalAlignment="Bottom"
                            Height="20"
                            Width="140"
                            CornerRadius="0 0 14 14" />
                    <TextBlock Text="{Binding RandomBookList[4].Title, UpdateSourceTrigger=PropertyChanged}"
                               FontSize="14"
                               VerticalAlignment="Bottom"
                               HorizontalAlignment="Center"
                               Width="135"
                               Margin="1.5 3 1.5 3"/>
                </Grid>
            </Grid>
        </Grid>
    </Grid>
</UserControl>
