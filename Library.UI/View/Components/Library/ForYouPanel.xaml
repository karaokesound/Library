<UserControl x:Class="Library.UI.View.Components.ForYouPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" 
             FontFamily="Titillium Web"
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <!--// for you - text //-->
            <TextBlock Text="For you"
                       FontFamily="Titillium Web Semibold"
                       Foreground="White"
                       HorizontalAlignment="Left"
                       FontSize="22" />

            <!--// for you - books //-->
            <Grid Grid.Row="1"
                  Width="910"
                  Height="110"
                  Margin="0 20 0 0"
                  VerticalAlignment="Top"
                  HorizontalAlignment="Center"
                  TextBlock.Foreground="White">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <!--// book 1 //-->
                <Border Width="150"
                        BorderBrush="White"
                        BorderThickness="2"
                        CornerRadius="14">
                    <Border.Background>
                        <ImageBrush ImageSource="/Resources/Images/Library/book1.png"
                                    Opacity="0.9"
                                    Stretch="UniformToFill"
                                    AlignmentY="Top" />
                    </Border.Background>
                </Border>

                <Grid>
                    <Border Background="#1b2631"
                            Opacity="0.95"
                            VerticalAlignment="Bottom"
                            Height="20"
                            Width="140"
                            CornerRadius="0 0 14 14" />
                    <TextBlock Text="{Binding RandomBookList[0].Title, UpdateSourceTrigger=PropertyChanged}"
                               FontSize="14"
                               VerticalAlignment="Bottom"
                               HorizontalAlignment="Center"
                               Width="145"
                               Margin="0 3 0 0"/>
                </Grid>

                <!--// book 2 //-->
                <Border Grid.Column="1"
                        Width="150"
                        BorderBrush="White"
                        BorderThickness="2"
                        CornerRadius="14">
                    <Border.Background>
                        <ImageBrush ImageSource="/Resources/Images/Library/book2.jpg"
                                    Opacity="0.9"
                                    Stretch="UniformToFill"
                                    AlignmentY="Top" />
                    </Border.Background>
                </Border>

                <Grid Grid.Column="1">
                    <Border Background="#1b2631"
                            Opacity="0.95"
                            VerticalAlignment="Bottom"
                            Height="20"
                            Width="145"
                            CornerRadius="0 0 14 14" />
                    <TextBlock Text="{Binding RandomBookList[1].Title, UpdateSourceTrigger=PropertyChanged}"
                               FontSize="14"
                               VerticalAlignment="Bottom"
                               HorizontalAlignment="Center"
                               Width="130" />
                </Grid>

                <!--// book 3 //-->
                <Border Grid.Column="2"
                        Width="150"
                        BorderBrush="White"
                        BorderThickness="2"
                        CornerRadius="14">
                    <Border.Background>
                        <ImageBrush ImageSource="/Resources/Images/Library/book3.jpg"
                                    Opacity="0.9"
                                    Stretch="UniformToFill"
                                    AlignmentY="Top" />
                    </Border.Background>
                </Border>

                <Grid Grid.Column="2">
                    <Border Background="#1b2631"
                            Opacity="0.95"
                            VerticalAlignment="Bottom"
                            Height="20"
                            Width="145"
                            CornerRadius="0 0 14 14" />
                    <TextBlock Text="{Binding RandomBookList[2].Title, UpdateSourceTrigger=PropertyChanged}"
                               FontSize="14"
                               VerticalAlignment="Bottom"
                               HorizontalAlignment="Center"
                               Width="130" />
                </Grid>

                <!--// book 4 //-->
                <Border Grid.Column="3"
                        Width="150"
                        BorderBrush="White"
                        BorderThickness="2"
                        CornerRadius="14">
                    <Border.Background>
                        <ImageBrush ImageSource="/Resources/Images/Library/book4.jpg"
                                    Opacity="0.9"
                                    Stretch="UniformToFill"
                                    AlignmentY="Top" />
                    </Border.Background>
                </Border>

                <Grid Grid.Column="3">
                    <Border Background="#1b2631"
                            Opacity="0.95"
                            VerticalAlignment="Bottom"
                            Height="20"
                            Width="145"
                            CornerRadius="0 0 14 14" />
                    <TextBlock Text="{Binding RandomBookList[3].Title, UpdateSourceTrigger=PropertyChanged}"
                               FontSize="14"
                               VerticalAlignment="Bottom"
                               HorizontalAlignment="Center"
                               Width="130" />
                </Grid>

                <!--// book 5 //-->
                <Border Grid.Column="4"
                        Width="150"
                        BorderBrush="White"
                        BorderThickness="2"
                        CornerRadius="14">
                    <Border.Background>
                        <ImageBrush ImageSource="/Resources/Images/Library/book5.jpg"
                                    Opacity="0.9"
                                    Stretch="UniformToFill"
                                    AlignmentY="Top" />
                    </Border.Background>
                </Border>

                <Grid Grid.Column="4">
                    <Border Background="#1b2631"
                            Opacity="0.95"
                            VerticalAlignment="Bottom"
                            Height="20"
                            Width="145"
                            CornerRadius="0 0 14 14" />
                    <TextBlock Text="{Binding RandomBookList[4].Title, UpdateSourceTrigger=PropertyChanged}"
                               FontSize="14"
                               VerticalAlignment="Bottom"
                               HorizontalAlignment="Center"
                               Width="130" />
                </Grid>
            </Grid>
        </Grid>
    </Grid>
</UserControl>
