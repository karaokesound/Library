<UserControl x:Class="Library.UI.View.Components.Library.SelectedBookDetails"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" 
             FontFamily="Titillium Web"
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Grid.IsSharedSizeScope="True">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="auto" />
        </Grid.RowDefinitions>

        <!--// MAIN BACKGROUND //-->
        <Border Grid.RowSpan="2">
            <Border.Background>
                <ImageBrush ImageSource="https://i.pinimg.com/736x/78/be/5d/78be5dd68cde3f3616c7304c2b158a45.jpg"
                            Stretch="UniformToFill" 
                            RenderOptions.BitmapScalingMode="Fant"/>
            </Border.Background>
        </Border>
        <Border Grid.RowSpan="2"
                Background="#052a4f"
                Opacity="0.9" />

        <!--// BOOK DETAILS //-->
        <Grid Margin="10 20 10 25"
              TextBlock.Foreground="White">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <!--// details text, book title, rating //-->
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="0.3*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <!--// details text, book title //-->
                <StackPanel>
                    <TextBlock Text="Details"
                               FontFamily="Titillium Web Semibold"
                               FontSize="22" />
                    <TextBlock Text="{Binding SelectedBook.Title, UpdateSourceTrigger=PropertyChanged}"
                               Margin="0 0 0 20"
                               FontFamily="Titillium Web Semibold"
                               FontSize="14"/>
                </StackPanel>
                
                <!--// question, stars //-->
                <StackPanel Grid.Column="1"
                            Margin="20 37 0 0"
                            VerticalAlignment="Center"
                            TextBlock.FontFamily="Tilillium Web Semibold"
                            Visibility="{Binding AreRatingStarsVisible, Converter={StaticResource booleanToVisibilityConverter}}">
                    <TextBlock Text="Did you read this book? Rate it from 0 to 10." />
                    <StackPanel Orientation="Horizontal">
                        <Grid>
                            <Image Source="/Resources/Images/Library/star.png"
                               Margin="0 5 0 0 "
                               RenderOptions.BitmapScalingMode="Fant"
                               Width="15"/>
                            <Button Width="15"
                                    Background="Transparent"
                                    CommandParameter="1"
                                    Command="{Binding AddGradeCommand}" />
                        </Grid>
                        <Grid>
                            <Image Source="/Resources/Images/Library/star.png"
                               Margin="0 5 0 0 "
                               RenderOptions.BitmapScalingMode="Fant"
                               Width="15"/>
                            <Button Width="15"
                                    Background="Transparent"
                                    CommandParameter="2"
                                    Command="{Binding AddGradeCommand}" />
                        </Grid>
                        <Grid>
                            <Image Source="/Resources/Images/Library/star.png"
                               Margin="0 5 0 0 "
                               RenderOptions.BitmapScalingMode="Fant"
                               Width="15"/>
                            <Button Width="15"
                                    Background="Transparent"
                                    CommandParameter="3"
                                    Command="{Binding AddGradeCommand}" />
                        </Grid>
                        <Grid>
                            <Image Source="/Resources/Images/Library/star.png"
                               Margin="0 5 0 0 "
                               RenderOptions.BitmapScalingMode="Fant"
                               Width="15"/>
                            <Button Width="15"
                                    Background="Transparent"
                                    CommandParameter="4"
                                    Command="{Binding AddGradeCommand}" />
                        </Grid>
                        <Grid>
                            <Image Source="/Resources/Images/Library/star.png"
                               Margin="0 5 0 0 "
                               RenderOptions.BitmapScalingMode="Fant"
                               Width="15"/>
                            <Button Width="15"
                                    Background="Transparent"
                                    CommandParameter="5"
                                    Command="{Binding AddGradeCommand}" />
                        </Grid>
                    </StackPanel>
                </StackPanel>

                <!--// return button //-->
                <Grid Grid.Column="1"
                    HorizontalAlignment="Right"
                  Margin="0 5 0 0">
                    <Image Source="/Resources/Images/Library/exit.png"
                       RenderOptions.BitmapScalingMode="Fant"
                       Width="27"
                       Height="27" />
                    <Button Command="{Binding LibraryReturnButtonCommand}"
                        Background="Transparent"
                        Width="27"
                        Height="27"/>
                </Grid>
            </Grid>

            <!--// more details //-->
            <StackPanel Grid.Row="1"
                        TextBlock.FontSize="13.5">

                <!--// category //-->
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" SharedSizeGroup="caption" />
                        <ColumnDefinition Width="200" SharedSizeGroup="data"/>
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <TextBlock Text="Category:"
                               Margin="0 0 30 4"/>
                    <TextBlock Grid.Column="1"
                               Text="{Binding SelectedBook.Category, UpdateSourceTrigger=PropertyChanged}" />
                </Grid>

                <!--// author, downloads, ratings, quantity //-->
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" SharedSizeGroup="caption" />
                        <ColumnDefinition Width="*" SharedSizeGroup="data"/>
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <!--// author //-->
                    <TextBlock Text="Author:"
                               Margin="0 0 0 4"/>
                    <StackPanel Grid.Column="1"
                                Orientation="Horizontal">
                        <TextBlock Text="{Binding SelectedBook.Author.FirstName, UpdateSourceTrigger=PropertyChanged}"
                                   Margin="0 0 4 0"/>
                        <TextBlock Text="{Binding SelectedBook.Author.LastName, UpdateSourceTrigger=PropertyChanged}"  />
                    </StackPanel>

                    <!--// copies //-->
                    <TextBlock Grid.Row="1"
                               Text="Copies:"
                               Margin="0 0 0 4"/>
                    <TextBlock Grid.Column="1"
                               Grid.Row="1"
                               Text="{Binding SelectedBook.Quantity, UpdateSourceTrigger=PropertyChanged}" />

                    <!--// downloads //-->
                    <TextBlock Grid.Row="2"
                               Text="Downloads:"
                               Margin="0 0 0 4"/>
                    <TextBlock Grid.Column="1"
                               Grid.Row="2"
                               Text="{Binding SelectedBook.Downloads, UpdateSourceTrigger=PropertyChanged}" />

                    <Grid Grid.Column="2"
                          Grid.RowSpan="3"
                          VerticalAlignment="Center"
                          HorizontalAlignment="Left">
                        <Border BorderBrush="White"
                                BorderThickness="2.5"
                                CornerRadius="20"
                                Width="70"
                                Height="55"/>
                        <StackPanel TextBlock.FontSize="30"
                                    TextBlock.Foreground="Orange"
                                    Orientation="Horizontal"
                                    Margin="2 5 0 0">
                            <TextBlock Text="{Binding BookGrade, UpdateSourceTrigger=PropertyChanged}"
                                       Visibility="{Binding IsBookGradeVisible, Converter={StaticResource booleanToVisibilityConverter}}" />
                            <TextBlock Text="/" />
                            <TextBlock Text="10" />
                        </StackPanel>
                    </Grid>
                </Grid>
            </StackPanel>
        </Grid>
    </Grid>
</UserControl>
