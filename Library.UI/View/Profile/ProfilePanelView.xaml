<UserControl x:Class="Library.UI.View.ProfilePanelView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:componentsprofile="clr-namespace:Library.UI.View.Components.Profile"
             mc:Ignorable="d" 
             FontFamily="Titillium Web"
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid >
        <!--// MAIN BACKGROUND //-->
        <Border Grid.Column="1"
                Opacity="1"
                CornerRadius="0 4 4 0">
            <Border.Background>
                <ImageBrush ImageSource="https://i.pinimg.com/736x/78/be/5d/78be5dd68cde3f3616c7304c2b158a45.jpg"
                            Stretch="UniformToFill" 
                            RenderOptions.BitmapScalingMode="Fant"/>
            </Border.Background>
        </Border>
        <Border Grid.Column="1"
                Background="#052a4f"
                Opacity="0.9" />

        <!--// MAIN //-->
        <Grid Grid.Column="1"
              TextBlock.Foreground="White">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <Grid>
                <Border Background="White"
                        Opacity="0.25"
                        CornerRadius="7"
                        Width="255"
                        Height="130" />
                <Border BorderBrush="White"
                        Opacity="0.7"
                        BorderThickness="1.3"
                        CornerRadius="7"
                        Width="255"
                        Height="130" />
                <Button Style="{StaticResource LargeProfileButton}"
                        Content="{Binding NoOfRentedBooks, UpdateSourceTrigger=PropertyChanged}"/>
                <StackPanel HorizontalAlignment="Center"
                            VerticalAlignment="Center">
                    <TextBlock Text="You have"
                               FontSize="22"
                               HorizontalAlignment="Center" />
                    <TextBlock FontSize="35"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Center"/>
                    <TextBlock Text="books rented"
                               FontSize="15"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Center"/>
                </StackPanel>
            </Grid>

            <Grid Grid.Column="1">
                <Border Background="White"
                        CornerRadius="7"
                        Opacity="0.25"
                        Width="255"
                        Height="130" />
                <Border BorderBrush="White"
                        Opacity="0.7"
                        BorderThickness="1.3"
                        CornerRadius="7"
                        Width="255"
                        Height="130" />
                <Button Style="{StaticResource LargeProfileButton}" />
                <StackPanel HorizontalAlignment="Center"
                            VerticalAlignment="Center">
                    <TextBlock Text="You can rent"
                               FontSize="22"
                               HorizontalAlignment="Center" />
                    <TextBlock Text="{Binding NoOfLeftedBooksToRent, UpdateSourceTrigger=PropertyChanged}"
                               FontSize="35"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Center"/>
                    <TextBlock Text="more books"
                               FontSize="15"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Center"/>
                </StackPanel>
            </Grid>

            <Grid Grid.Row="1"
                  Grid.ColumnSpan="2">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <Border Background="White"
                        Opacity="0.25"
                        CornerRadius="7"
                        Width="125"
                        Height="80"/>
                <Border BorderBrush="White"
                        Opacity="0.7"
                        BorderThickness="1.3"
                        CornerRadius="7"
                        Width="125"
                        Height="80" />
                <Button Content="Settings"
                        Style="{StaticResource SmallProfileButton}"/>

                <Border Grid.Column="1"
                        Background="White"
                        Opacity="0.25"
                        CornerRadius="7"
                        Width="125"
                        Height="80"/>
                <Border Grid.Column="1"
                        BorderBrush="White"
                        Opacity="0.7"
                        BorderThickness="1.3"
                        CornerRadius="7"
                        Width="125"
                        Height="80" />
                <Button Grid.Column="1"
                        Content="Returns"
                        Style="{StaticResource SmallProfileButton}"
                        Command="{Binding ReturnsPanelCommand}"/>

                <Border Grid.Column="2"
                        Background="White"
                        Opacity="0.25"
                        CornerRadius="7"
                        Width="125"
                        Height="80"/>
                <Border Grid.Column="2"
                        BorderBrush="White"
                        Opacity="0.7"
                        BorderThickness="1.3"
                        CornerRadius="7"
                        Width="125"
                        Height="80" />
                <Button Grid.Column="2"
                        Content="Reservations"
                        Style="{StaticResource SmallProfileButton}"/>

                <Border Grid.Column="3"
                        Background="White"
                        Opacity="0.25"
                        CornerRadius="7"
                        Width="125"
                        Height="80"/>
                <Border Grid.Column="3"
                        BorderBrush="White"
                        Opacity="0.7"
                        BorderThickness="1.3"
                        CornerRadius="7"
                        Width="125"
                        Height="80" />
                <Button Grid.Column="3"
                        Content="Xyz"
                        Style="{StaticResource SmallProfileButton}"/>
            </Grid>
        </Grid>

        <componentsprofile:ReturnPanel Grid.Column="1"
                                       Visibility="{Binding IsReturnsPanelVisible, Converter={StaticResource booleanToVisibilityConverter}}"/>
    </Grid>
</UserControl>
