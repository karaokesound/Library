<UserControl x:Class="Library.UI.View.ProfilePanelView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:view="clr-namespace:Library.UI.View" xmlns:components="clr-namespace:Library.UI.View.Components"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.2*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!--// NAVIGATION PANEL //-->
        <components:NavigationPanel />

        <!--// MAIN BACKGROUND //-->
        <Border Grid.Column="1"
                Opacity="1"
                CornerRadius="0 4 4 0">
            <Border.Background>
                <ImageBrush ImageSource="https://i.pinimg.com/736x/78/be/5d/78be5dd68cde3f3616c7304c2b158a45.jpg"
                            Stretch="UniformToFill" 
                            RenderOptions.BitmapScalingMode="Fant"/>
            </Border.Background>
        </Border>
        <Border Grid.Column="1"
                Background="#052a4f"
                Opacity="0.9" />

        <!--// MAIN //-->
        <Grid Grid.Column="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <Grid>
                <Border Background="White"
                        Opacity="0.25"
                        CornerRadius="7"
                        Width="255"
                        Height="130" />
                <Border BorderBrush="White"
                        Opacity="0.7"
                        BorderThickness="1.3"
                        CornerRadius="7"
                        Width="255"
                        Height="130" />
                <Button Style="{StaticResource LargeProfileButton}" />
                <StackPanel HorizontalAlignment="Center"
                            VerticalAlignment="Center">
                    <TextBlock Text="You have"
                               FontSize="22"
                               HorizontalAlignment="Center" />
                    <TextBlock Text="2"
                               FontSize="35"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Center"/>
                    <TextBlock Text="books rented"
                               FontSize="15"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Center"/>
                </StackPanel>
            </Grid>

            <Grid Grid.Column="1">
                <Border Background="White"
                        CornerRadius="7"
                        Opacity="0.25"
                        Width="255"
                        Height="130" />
                <Border BorderBrush="White"
                        Opacity="0.7"
                        BorderThickness="1.3"
                        CornerRadius="7"
                        Width="255"
                        Height="130" />
                <Button Style="{StaticResource LargeProfileButton}" />
                <StackPanel HorizontalAlignment="Center"
                            VerticalAlignment="Center">
                    <TextBlock Text="You can rent"
                               FontSize="22"
                               HorizontalAlignment="Center" />
                    <TextBlock Text="2"
                               FontSize="35"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Center"/>
                    <TextBlock Text="more books"
                               FontSize="15"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Center"/>
                </StackPanel>
            </Grid>

            <Grid Grid.Row="1"
                  Grid.ColumnSpan="2">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <!--// settings //-->
                <Border Background="White"
                        Opacity="0.25"
                        CornerRadius="7"
                        Width="125"
                        Height="80"/>
                <Border BorderBrush="White"
                        Opacity="0.7"
                        BorderThickness="1.3"
                        CornerRadius="7"
                        Width="125"
                        Height="80" />
                <Button Content="Settings"
                        Style="{StaticResource SmallProfileButton}"/>
                
                <!--// returns //-->
                <Border Grid.Column="1"
                        Background="White"
                        Opacity="0.25"
                        CornerRadius="7"
                        Width="125"
                        Height="80"/>
                <Border Grid.Column="1"
                        BorderBrush="White"
                        Opacity="0.7"
                        BorderThickness="1.3"
                        CornerRadius="7"
                        Width="125"
                        Height="80" />
                <Button Grid.Column="1"
                        Content="Returns"
                        Style="{StaticResource SmallProfileButton}"
                        Command="{Binding ReturnBookCommand}"/>

                <!--// reservation //-->
                <Border Grid.Column="2"
                        Background="White"
                        Opacity="0.25"
                        CornerRadius="7"
                        Width="125"
                        Height="80"/>
                <Border Grid.Column="2"
                        BorderBrush="White"
                        Opacity="0.7"
                        BorderThickness="1.3"
                        CornerRadius="7"
                        Width="125"
                        Height="80" />
                <Button Grid.Column="2"
                        Content="Reservation"
                        Style="{StaticResource SmallProfileButton}"/>

                <!--// xyz //-->
                <Border Grid.Column="3"
                        Background="White"
                        Opacity="0.25"
                        CornerRadius="7"
                        Width="125"
                        Height="80"/>
                <Border Grid.Column="3"
                        BorderBrush="White"
                        Opacity="0.7"
                        BorderThickness="1.3"
                        CornerRadius="7"
                        Width="125"
                        Height="80" />
                <Button Grid.Column="3"
                        Content="Xyz"
                        Style="{StaticResource SmallProfileButton}"/>
            </Grid>
        </Grid>

        <!--// CONTENT CONTROL //-->
        <ContentControl Content="{Binding SelectedViewModel}"
                        Grid.ColumnSpan="2"/>
    </Grid>
</UserControl>
