<UserControl x:Class="Library.UI.View.ProfilePanelView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:view="clr-namespace:Library.UI.View"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.09*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <!--// NAVIGATION BAR BACKGROUND //-->
        <Border CornerRadius="20 20 0 0"
                MouseDown="Border_MouseDown">
            <Border.Background>
                <ImageBrush ImageSource="https://st2.depositphotos.com/1756201/8010/i/450/depositphotos_80108908-stock-photo-navy-blue-abstract-background.jpg"
                            Stretch="UniformToFill" />
            </Border.Background>
        </Border>


        <!--// MAIN BACKGROUND //-->
        <Border CornerRadius="0 0 20 20"
                Grid.Row="1">
            <Border.Background>
                <ImageBrush ImageSource="https://wallpaperaccess.com/full/2312616.jpg"
                            Stretch="UniformToFill" 
                            RenderOptions.BitmapScalingMode="Fant"/>
            </Border.Background>
        </Border>
        <Border Background=" #aed6f1 "
                Opacity="0"
                Grid.Row="1" />

        <!--// NAVIGATION BAR //-->
        <Grid Margin="15 0 15 0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1.26*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="auto" />
            </Grid.ColumnDefinitions>

            <!--// home, library //-->
            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Left">
                <Button Content="Profile"
                        Style="{StaticResource navigationButton}" />
                <Button Content="Library"
                        Command="{Binding ProfileUpdateViewCommand}"
                        CommandParameter="Library"
                        Style="{StaticResource navigationButton}" />
            </StackPanel>

            <!--// exit, minimize //-->
            <StackPanel Grid.Column="2"
                        Orientation="Horizontal"
                        HorizontalAlignment="Right"
                        Margin="0 0 0 3">
                <Button Content="-"
                        Style="{StaticResource exitButton}"
                        Click="MinimizeButton_Click"/>
                <Button Content="X"
                        Style="{StaticResource exitButton}"
                        Click="ExitButton_Click" />
            </StackPanel>
        </Grid>

        <!--// CONTENT CONTROL //-->
        <ContentControl Content="{Binding SelectedViewModel}"
                        Grid.RowSpan="2"/>
    </Grid>
</UserControl>
