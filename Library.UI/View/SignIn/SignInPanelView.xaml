<UserControl x:Class="Library.UI.View.SignInPanelView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:components="clr-namespace:Library.UI.Components"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="0.4*" />
        </Grid.RowDefinitions>

        <!--// BACKGROUND //-->
        <Border Grid.RowSpan="2"
                Background="White"
                CornerRadius="6"/>

        <!--// PANEL //-->
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="0.7*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="0.7*" />
            </Grid.ColumnDefinitions>

            <!--// BACKGROUND //-->
            <Border Grid.Column="1"
                    Grid.RowSpan="2"
                    Background=" #ebedef "
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Width="200"
                    Height="150"
                    Opacity="0.1"
                    CornerRadius="20"/>
            <Image Grid.Column="1"
                   Grid.RowSpan="2"
                   Source="/Resources/people.png"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   RenderOptions.BitmapScalingMode="Fant"
                   Height="205"
                   Width="200"
                   Opacity="0.05"/>

            <!--// USERNAME, PASSWORD //-->
            <StackPanel Grid.RowSpan="2"
                        Grid.Column="1"
                        VerticalAlignment="Center"
                        Margin="0 0 0 20">

                <!--// username //-->
                <StackPanel Orientation="Horizontal">
                    <Image Source="/Resources/userlog.png"
                           HorizontalAlignment="Right"
                           Margin="0 22 4 0"
                           Width="30"
                           Height="30"
                           RenderOptions.BitmapScalingMode="Fant" />
                    <StackPanel HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Width="270">
                        <TextBlock Text="Username" 
                                   FontSize="15"
                                   FontWeight="Bold"
                                   Margin="2 0 0 2"/>
                        <TextBox Text="{Binding SignInUsernamePassword.Username}"
                                 Style="{StaticResource signUpTextBox}"
                                 Height="35"
                                 FontSize="13.5"
                                 />
                    </StackPanel>
                </StackPanel>

                <!--// password //-->
                <StackPanel Orientation="Horizontal"
                            Margin="0 15 0 0">

                    <Image Source="/Resources/lock.png"
                           HorizontalAlignment="Right"
                           Margin="0 22 4 0"
                           Width="30"
                           Height="30"
                           RenderOptions.BitmapScalingMode="Fant" />
                    <StackPanel Width="300"
                                Grid.Column="1">
                        <TextBlock Text="Password" 
                                   FontSize="15"
                                   FontWeight="Bold"
                                   Margin="2 0 0 2"/>
                        <components:BindablePasswordBox Password="{Binding SignInUsernamePassword.Password, Converter={StaticResource stringEmptyConverter}, ConverterParameter='Password', Mode=TwoWay}" 
                                                        Width="270"
                                                        HorizontalAlignment="Left"
                                                        Height="35"
                                                        FontSize="13.5"
                                                        />
                    </StackPanel>
                </StackPanel>
            </StackPanel>
        </Grid>

        <!--// LOGIN BUTTON //-->
        <Button Grid.Row="1"
                Grid.Column="1"
                Content="LOGIN"
                VerticalAlignment="Top"
                Height="30"
                Width="100"
                Command="{Binding LoginButtonCommand}"
                Style="{StaticResource loginButton}"
                HorizontalAlignment="Center"/>
    </Grid>
</UserControl>
