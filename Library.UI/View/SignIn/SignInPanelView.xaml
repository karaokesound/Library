<UserControl x:Class="Library.UI.View.SignInPanelView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.17*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="0.3*" />
        </Grid.RowDefinitions>

        <!--// BACKGROUND //-->
        <Border Grid.RowSpan="3"
                Background="White"
                CornerRadius="6"/>

      
        
        <!--// PANEL BACKGROUND //-->
        <Border Grid.RowSpan="3"
                BorderBrush=" #e5cde7 "
                BorderThickness="2"
                CornerRadius="6">
            <Border.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,5">
                    <GradientStop Color=" #ffefe6 " Offset="0.0" />
                    <GradientStop Color=" #ffe6f5 " Offset="0.30" />
                    <GradientStop Color=" #e6f0ff " Offset="0.77" />
                </LinearGradientBrush>
            </Border.Background>
        </Border>

        <!--// LOGIN //-->
        <TextBlock Text="LOGIN"
                   FontSize="25"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"/>

        <!--// PANEL //-->
        <StackPanel Grid.Row="1"
                    Margin="15"
                    TextBlock.FontSize="20"
                    VerticalAlignment="Center">
            <TextBlock Text="Username"
                       Margin="0 0 0 5"/>
            <TextBox Text="{Binding SignInUsernamePassword.Username}"
                     Margin="0 0 0 20"/>
            <TextBlock Text="Password"
                       Margin="0 0 0 5"/>
            <TextBox Text="{Binding SignInUsernamePassword.Password}"/>
        </StackPanel>

        <Button Grid.Row="3"
                Command="{Binding LoginButtonCommand}"
                CommandParameter="Account"
                Content="LOGIN"
                Style="{StaticResource loginButton}"
                HorizontalAlignment="Center"/>

        <!--// CONTENT CONTROL //-->
        <ContentControl Content="{Binding SelectedViewModel}"
                        Grid.RowSpan="2" />
    </Grid>
</UserControl>
