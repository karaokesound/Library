<UserControl x:Class="Library.UI.View.LibraryView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:i="clr-namespace:Microsoft.VisualBasic;assembly=Microsoft.VisualBasic.Core" xmlns:library="clr-namespace:Library.UI.Resources.Library" xmlns:components="clr-namespace:Library.UI.View.Components"
             mc:Ignorable="d" 
             d:DesignHeight="620" d:DesignWidth="920">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.09*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!--// NAVIGATION BAR BACKGROUND //-->
        <Border CornerRadius="20 20 0 0">
            <Border.Background>
                <ImageBrush ImageSource="https://img.freepik.com/free-vector/abstract-background-concept_23-2148486861.jpg?t=st=1683696169~exp=1683696769~hmac=a1a749e58621d6858d442da59f99ef6832bcb3dd9d72e1c0a192a85fd5712167"
                            Stretch="UniformToFill" />
            </Border.Background>
        </Border>

        <!--// MAIN BACKGROUND //-->
        <Border CornerRadius="0 0 20 20"
                Grid.Row="1">
            <Border.Background>
                <ImageBrush ImageSource="https://img.freepik.com/free-vector/abstract-background-concept_23-2148486861.jpg?t=st=1683696169~exp=1683696769~hmac=a1a749e58621d6858d442da59f99ef6832bcb3dd9d72e1c0a192a85fd5712167"
                            Stretch="UniformToFill" />
            </Border.Background>
        </Border>
        <Border Grid.Row="1"
                CornerRadius="0 0 20 20"
                Background="#2471a3"
                Opacity="0.65">
        </Border>

        <!--// NAVIGATION BAR //-->
        <Grid Margin="15 0 15 0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1.26*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="auto" />
            </Grid.ColumnDefinitions>

            <!--// home, library //-->
            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Left">
                <Button Content="Home"
                        Command="{Binding LibraryUpdateViewCommand}"
                        CommandParameter="Account"
                        Style="{StaticResource navigationButton}" />
                <Button Content="Library"
                        Style="{StaticResource navigationButton}" />
            </StackPanel>

            <!--// search //-->
            <TextBox Grid.Column="1"
                     Style="{StaticResource searchBox}" />
            <Border Grid.Column="1"
                    VerticalAlignment="Bottom"
                    HorizontalAlignment="Right"
                    Margin="0 0 64.5 8"
                    Background="White"
                    Opacity="0.2"
                    CornerRadius="10"
                    Height="25"
                    Width="25" />
            <Image Grid.Column="1"
                   HorizontalAlignment="Right"
                   VerticalAlignment="Bottom"
                   Margin="0 0 67 10"
                   Source="/Resources/Images/search.png"
                   Width="17"
                   Height="17"
                   RenderOptions.BitmapScalingMode="Fant"/>

            <!--// exit, minimize //-->
            <StackPanel Grid.Column="2"
                        Orientation="Horizontal"
                        HorizontalAlignment="Right">
                <Button Content="-"
                        Style="{StaticResource exitButton}"
                        Click="MinimizeButton_Click"/>
                <Button Content="X"
                        Style="{StaticResource exitButton}"
                        Click="ExitButton_Click" />
            </StackPanel>
        </Grid>

        <!--// MAIN //-->
        <Grid Grid.Row="1"
              Margin="15 20 15 20">
            <Grid.RowDefinitions>
                <RowDefinition Height="0.53*" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <!--// FOR YOU - PANEL //-->
            <components:ForYouPanel Margin="0 5 0 25" />

            <!--// TOP BOOKS - PANEL //-->
            <components:TopBooksPanel Grid.Row="1"
                                      Margin="0 10 0 0" />
        </Grid>

        <!--// CONTENT CONTROL //-->
        <ContentControl Grid.RowSpan="2"
                        Content="{Binding SelectedViewModel}" />
    </Grid>
</UserControl>
