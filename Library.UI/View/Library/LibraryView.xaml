<UserControl x:Class="Library.UI.View.LibraryView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Library.UI.View"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.15*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!--// BACKGROUND //-->
        <Border Grid.RowSpan="2"
                Background=" #ebf5fb "
                CornerRadius="20" />
        <Border CornerRadius="20"
                Height="75"
                MouseDown="Border_MouseDown">
            <Border.Background>
                <ImageBrush ImageSource="https://pngfreepic.com/wp-content/uploads/2022/08/Abstract-wave-png-49.png?v=1663404382"
                            Stretch="UniformToFill" />
            </Border.Background>
        </Border>

        <!--// NAVIGATION BAR //-->
        <StackPanel Orientation="Horizontal"
                    TextBlock.Foreground="White"
                    Margin="15 0 0 0">
            <Button Content="Home"
                    Command="{Binding LibraryUpdateViewCommand}"
                    CommandParameter="Account"
                    Style="{StaticResource registerButton}"
                    Background="Transparent"
                    Width="120"
                    Margin="0 0 15 0"/>
            <Button Content="Library"
                    Margin="0 0 15 0"
                    Width="120"
                    Style="{StaticResource registerButton}"
                    Background="Transparent"/>
            <Button Content="Settings"
                    Width="120"
                    Background="Transparent"
                    Style="{StaticResource registerButton}" />
        </StackPanel>
        <StackPanel Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Center"
                    Margin="15">
            <Button Content="-"
                    FontWeight="Bold"
                    Background="Transparent"
                    Margin="0 0 15 0"
                    Style="{StaticResource exitButton}"
                    Click="MinimizeButton_Click"/>
            <Button Content="X"
                    Style="{StaticResource exitButton}"
                    Click="ExitButton_Click"
                    Background="Transparent"/>
        </StackPanel>

        <!--// LIBRARY //--> 
        <Grid Grid.Row="1"
              Margin="15">
            <StackPanel>
                <TextBlock Text="Library"
                       FontSize="30" />
                <ComboBox SelectedValue="Book category">
                    <ComboBoxItem Content="Sci-fi" />
                    <ComboBoxItem Content="Adventure" />
                </ComboBox>
                
                <Button Content="Get books"
                        Command="{Binding GetBookBaseCommand}"
                        Width="200"
                        Height="100" />
                <Button Content="Show books"
                        Width="100"
                        Height="30"
                        Command="{Binding DisplayBookCommand}" />

                <ListView ItemsSource="{Binding BookList}">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <StackPanel>
                                <TextBlock Text="{Binding Title, UpdateSourceTrigger=PropertyChanged}" />
                                <TextBlock Text="{Binding Category, UpdateSourceTrigger=PropertyChanged}"/>
                                <TextBlock Text="{Binding Pages,UpdateSourceTrigger=PropertyChanged}"/>
                                <TextBlock />
                            </StackPanel>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </StackPanel>
        </Grid>
        
        <!--// CONTENT CONTROL //-->
        <ContentControl Content="{Binding SelectedViewModel}"
                        Grid.RowSpan="2"/>
    </Grid>
</UserControl>
