<UserControl x:Class="Library.UI.View.LibraryView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.12*" />
            <!--// main row nr 1 //-->
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!--// BACKGROUND //-->
        <Border Grid.RowSpan="2"
                Background="#006699"
                CornerRadius="20 20 0 0" />
        <Border CornerRadius="20 20 0 0"
                MouseDown="Border_MouseDown">
            <Border.Background>
                <ImageBrush ImageSource="https://pngfreepic.com/wp-content/uploads/2022/08/Abstract-wave-png-49.png?v=1663404382"
                            Stretch="UniformToFill" />
            </Border.Background>
        </Border>

        <!--// NAVIGATION BAR //-->
        <Grid Margin="15 0 15 0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1.26*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="auto" />
            </Grid.ColumnDefinitions>

            <!--// home, library //-->
            <StackPanel Orientation="Horizontal"
                        TextBlock.Foreground="White"
                        TextBlock.FontWeight="Bold"
                        HorizontalAlignment="Left">
                <StackPanel VerticalAlignment="Center"
                            Margin="0 0 15 0">
                    <Button Content="Home"
                            Command="{Binding LibraryUpdateViewCommand}"
                            CommandParameter="Account"
                            Style="{StaticResource navigationButton}"
                            Background="Transparent" />
                    <Border BorderThickness="0 0 0 3"
                            BorderBrush=" #263238 "
                            Width="70" />
                </StackPanel>

                <StackPanel VerticalAlignment="Center"
                            Margin="0 0 15 0">
                    <Button Content="Library"
                            Style="{StaticResource navigationButton}"
                            Background="Transparent" />
                    <Border BorderThickness="0 0 0 3"
                            BorderBrush=" #263238 "
                            Width="70" />
                </StackPanel>
            </StackPanel>

            <!--// search, select category //-->
            <StackPanel Grid.Column="1"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center">
                <Button Content="Select category"
                            Background="Transparent"
                            FontSize="11"
                            Foreground="White"
                            HorizontalAlignment="Left"/>

                <TextBox Style="{StaticResource searchBox}" />
            </StackPanel>

            <!--// exit, minimize //-->
            <StackPanel Grid.Column="2"
                        Orientation="Horizontal"
                        VerticalAlignment="Bottom"
                        HorizontalAlignment="Right"
                        Margin="0, 0, 0, 10">
                <Button Content="-"
                        FontWeight="Bold"
                        Background="Transparent"
                        Margin="0 0 15 0"
                        Style="{StaticResource exitButton}"
                        Click="MinimizeButton_Click"/>
                <Button Content="X"
                        Style="{StaticResource exitButton}"
                        Click="ExitButton_Click"
                        Background="Transparent"/>
            </StackPanel>
        </Grid>

        <!--// MAIN ROW NR 1 //-->
        <Grid Grid.Row="1"
              Margin="15 0 15 0">
            <Grid.RowDefinitions>
                <RowDefinition Height="0.75*" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <!--// FOR YOU //-->
            <Grid Margin="0 20 0 10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <!--// text //-->
                <TextBlock Text="For you"
                           Foreground="White"
                           FontSize="20" />

                <!--// books //-->
                <Grid Grid.Row="1"
                      VerticalAlignment="Center"
                      Margin="0 5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Border Background="White"
                            HorizontalAlignment="Left"
                            Margin="0 0 10 0"
                            Opacity="0.4"
                            Height="130"
                            Width="245"
                            CornerRadius="14" />
                    <Border Grid.Column="1"
                            Background="White"
                            Margin="0 0 0 0"
                            HorizontalAlignment="Center"
                            Opacity="0.4"
                            Height="130"
                            Width="245"
                            CornerRadius="14" />
                    <Border Grid.Column="2"
                            Background="White"
                            Margin="10 0 0 0"
                            HorizontalAlignment="Left"
                            Opacity="0.4"
                            Height="130"
                            Width="245"
                            CornerRadius="14" />
                </Grid>
            </Grid>

            <!--// TOP BOOKS //-->
            <StackPanel Grid.Row="1"
                        Margin="0 0 0 10">
                <TextBlock 
                       Text="Top books"
                       Foreground="White"
                       FontSize="20" />

                <!--// books listview //-->
                <ListView ItemsSource="{Binding BookList}"
                          MaxHeight="245"
                          ScrollViewer.VerticalScrollBarVisibility="Auto">
                    <ListView.View>
                        <GridView>
                            <GridViewColumn Header="Test"
                                            DisplayMemberBinding="{Binding Title,UpdateSourceTrigger=PropertyChanged}">
                            </GridViewColumn>
                            <GridViewColumn Header="Category"
                                            DisplayMemberBinding="{Binding Category,UpdateSourceTrigger=PropertyChanged}"/>
                            <GridViewColumn Header="Author"
                                            DisplayMemberBinding="{Binding Author.FirstName,UpdateSourceTrigger=PropertyChanged}" />
                        </GridView>
                    </ListView.View>
                </ListView>
            </StackPanel>
        </Grid>

        <!--// CONTENT CONTROL //-->
        <ContentControl Content="{Binding SelectedViewModel}"
                        Grid.RowSpan="2"/>
    </Grid>
</UserControl>
