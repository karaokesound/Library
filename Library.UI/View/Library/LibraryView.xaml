<UserControl x:Class="Library.UI.View.LibraryView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:i="clr-namespace:Microsoft.VisualBasic;assembly=Microsoft.VisualBasic.Core"
             mc:Ignorable="d" 
             d:DesignHeight="620" d:DesignWidth="920">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.12*" />
            <!--// main row nr 1 //-->
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!--// BACKGROUND //-->
        <Border CornerRadius="20 20 0 0"
                MouseDown="Border_MouseDown">
            <Border.Background>
                <ImageBrush ImageSource="https://t3.ftcdn.net/jpg/05/40/08/38/360_F_540083851_WPHVKF00Oxmdtsg0JYLh1ouTTjKKfiaJ.jpg"
                            Stretch="UniformToFill"
                            RenderOptions.BitmapScalingMode="Fant"/>
            </Border.Background>
            <Border Background="#154360"
                    Opacity="0.1"
                    CornerRadius="20 20 0 0" />
        </Border>
        <Border Grid.Row="1"
                Background="#154360"
                CornerRadius="0 0 20 20" />

        <!--// NAVIGATION BAR //-->
        <Grid Margin="15 0 15 0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1.26*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="auto" />
            </Grid.ColumnDefinitions>

            <!--// home, library //-->
            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Left">
                <Button Content="Home"
                        Command="{Binding LibraryUpdateViewCommand}"
                        CommandParameter="Account"
                        Style="{StaticResource navigationButton}" />
                <Button Content="Library"
                        Style="{StaticResource navigationButton}" />
            </StackPanel>

            <!--// search //-->
            <TextBox Grid.Column="1"
                     Style="{StaticResource searchBox}" 
                     />
            <Border Grid.Column="1"
                    VerticalAlignment="Bottom"
                    HorizontalAlignment="Right"
                    Margin="0 0 26 5"
                    Background="White"
                    Opacity="0.2"
                    CornerRadius="10"
                    Height="30"
                    Width="30" />
            <Image Grid.Column="1"
                   HorizontalAlignment="Right"
                   VerticalAlignment="Bottom"
                   Margin="0 0 30 8"
                   Source="/Resources/Images/search.png"
                   Width="20"
                   Height="20"
                   RenderOptions.BitmapScalingMode="Fant"/>

            <!--// exit, minimize //-->
            <StackPanel Grid.Column="2"
                        Orientation="Horizontal"
                        HorizontalAlignment="Right">
                <Button Content="-"
                        Style="{StaticResource exitButton}"
                        Click="MinimizeButton_Click"/>
                <Button Content="X"
                        Style="{StaticResource exitButton}"
                        Click="ExitButton_Click" />
            </StackPanel>
        </Grid>

        <!--// ROW 1 //-->
        <Grid Grid.Row="1"
              Margin="15 0 15 15">
            <Grid.RowDefinitions>
                <RowDefinition Height="0.75*" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <!--// FOR YOU //-->
            <Grid Margin="0 20 0 10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <!--// text //-->
                <TextBlock Text="For you"
                           Foreground="White"
                           FontSize="20" />

                <!--// books //-->
                <Grid Grid.Row="1"
                      VerticalAlignment="Center"
                      Margin="0 5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Border Background="White"
                            HorizontalAlignment="Left"
                            Margin="0 0 10 0"
                            Opacity="0.4"
                            Height="130"
                            Width="245"
                            CornerRadius="14" />
                    <Border Grid.Column="1"
                            Background="White"
                            Margin="0 0 0 0"
                            HorizontalAlignment="Center"
                            Opacity="0.4"
                            Height="130"
                            Width="245"
                            CornerRadius="14" />
                    <Border Grid.Column="2"
                            Background="White"
                            Margin="10 0 0 0"
                            HorizontalAlignment="Left"
                            Opacity="0.4"
                            Height="130"
                            Width="245"
                            CornerRadius="14" />
                </Grid>
            </Grid>

            <!--// TOP BOOKS //-->
            <Grid Grid.Row="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <!--// top books //-->
                <TextBlock Text="Top books"
                           HorizontalAlignment="Left"
                           VerticalAlignment="Center"
                           Foreground="White"
                           FontSize="20"
                           Margin="0 0 0 5"/>

                <!--// select category //-->
                <StackPanel Orientation="Horizontal"
                            HorizontalAlignment="Right">
                    <ComboBox ItemsSource="{Binding SortingMethods, Converter={StaticResource enumToCollConverter}, Mode=OneTime}"
                              SelectedValuePath="Value"
                              DisplayMemberPath="Description"
                              SelectedValue="{Binding SortingMethods, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">

                    </ComboBox>
                    <Button Style="{StaticResource categoryButton}" />
                </StackPanel>


                <!--// books listview //-->
                <ListView Grid.Row="1"
                          ItemsSource="{Binding BookList, UpdateSourceTrigger=PropertyChanged}"
                          MaxHeight="245"
                          ScrollViewer.VerticalScrollBarVisibility="Auto">
                    <ListView.View>
                        <GridView>
                            <GridViewColumn Header="Test"
                                            DisplayMemberBinding="{Binding Title,UpdateSourceTrigger=PropertyChanged}">
                            </GridViewColumn>
                            <GridViewColumn Header="Category"
                                            DisplayMemberBinding="{Binding Category,UpdateSourceTrigger=PropertyChanged}"/>
                            <GridViewColumn Header="Author"
                                            DisplayMemberBinding="{Binding Author.FirstName,UpdateSourceTrigger=PropertyChanged}" />
                        </GridView>
                    </ListView.View>
                </ListView>
            </Grid>
        </Grid>

        <!--// CONTENT CONTROL //-->
        <ContentControl Content="{Binding SelectedViewModel}"
                        Grid.RowSpan="2"/>
    </Grid>
</UserControl>
