<UserControl x:Class="Library.UI.View.LibraryView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:i="clr-namespace:Microsoft.VisualBasic;assembly=Microsoft.VisualBasic.Core" xmlns:library="clr-namespace:Library.UI.Resources.Library" xmlns:components="clr-namespace:Library.UI.View.Components"
             mc:Ignorable="d" 
             d:DesignHeight="620" d:DesignWidth="920">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.09*" />
            <!--// main row nr 1 //-->
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!--// BACKGROUND //-->
        <Border CornerRadius="20 20 0 0"
                MouseDown="Border_MouseDown">
            <Border.Background>
                <ImageBrush ImageSource="https://t3.ftcdn.net/jpg/05/40/08/38/360_F_540083851_WPHVKF00Oxmdtsg0JYLh1ouTTjKKfiaJ.jpg"
                            Stretch="UniformToFill"
                            RenderOptions.BitmapScalingMode="Fant"/>
            </Border.Background>
            <Border Background="#154360"
                    Opacity="0.1"
                    CornerRadius="20 20 0 0" />
        </Border>
        <Border Grid.Row="1"
                CornerRadius="0 0 20 20">
            <Border.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color=" #154360 " Offset="0" />
                    <GradientStop Color="  #2980b9  " Offset="0.5" />
                    <GradientStop Color="#154360" Offset="1" />
                </LinearGradientBrush>
            </Border.Background>
        </Border>

        <!--// NAVIGATION BAR //-->
        <Grid Margin="15 0 15 0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1.26*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="auto" />
            </Grid.ColumnDefinitions>

            <!--// home, library //-->
            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Left">
                <Button Content="Home"
                        Command="{Binding LibraryUpdateViewCommand}"
                        CommandParameter="Account"
                        Style="{StaticResource navigationButton}" />
                <Button Content="Library"
                        Style="{StaticResource navigationButton}" />
            </StackPanel>

            <!--// search //-->
            <TextBox Grid.Column="1"
                     Style="{StaticResource searchBox}" />
            <Border Grid.Column="1"
                    VerticalAlignment="Bottom"
                    HorizontalAlignment="Right"
                    Margin="0 0 64.5 8"
                    Background="White"
                    Opacity="0.2"
                    CornerRadius="10"
                    Height="25"
                    Width="25" />
            <Image Grid.Column="1"
                   HorizontalAlignment="Right"
                   VerticalAlignment="Bottom"
                   Margin="0 0 67 10"
                   Source="/Resources/Images/search.png"
                   Width="17"
                   Height="17"
                   RenderOptions.BitmapScalingMode="Fant"/>

            <!--// exit, minimize //-->
            <StackPanel Grid.Column="2"
                        Orientation="Horizontal"
                        HorizontalAlignment="Right">
                <Button Content="-"
                        Style="{StaticResource exitButton}"
                        Click="MinimizeButton_Click"/>
                <Button Content="X"
                        Style="{StaticResource exitButton}"
                        Click="ExitButton_Click" />
            </StackPanel>
        </Grid>

        <!--// ROW 1 //-->
        <Grid Grid.Row="1"
              Margin="15 20 15 20">
            <Grid.RowDefinitions>
                <RowDefinition Height="0.53*" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <!--// FOR YOU - PANEL //-->
            <Grid Margin="0 5 0 25">
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <!--// for you - text //-->
                <TextBlock Text="For you"
                           Foreground="White"
                           HorizontalAlignment="Left"
                           FontSize="20" />

                <!--// for you - books //-->
                <Grid Grid.Row="1"
                      Margin="0 10 0 0"
                      Width="910"
                      HorizontalAlignment="Center">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Border Background="White"
                            HorizontalAlignment="Center"
                            Opacity="0.4"
                            Width="160"
                            CornerRadius="14" />
                    
                    <StackPanel Margin="0 5 0 0">
                        <Image Source="/Resources/Images/e-book.png"
                           Width="50"/>
                        <TextBlock Text="{Binding RandomBookList[0].Title, UpdateSourceTrigger=PropertyChanged}"
                                   FontSize="16"
                                   Margin="20 5 20 0"/>
                        <TextBlock Text="{Binding RandomBookList[0].Category,UpdateSourceTrigger=PropertyChanged}"
                                   Margin="20 5 0 20"
                                   FontSize="13"/>
                    </StackPanel>
                    <Border Grid.Column="1"
                            Background="White"
                            HorizontalAlignment="Center"
                            Opacity="0.4"
                            Width="160"
                            CornerRadius="14" />
                    <StackPanel Grid.Column="1"
                                Margin="0 5 0 0">
                        <Image Source="/Resources/Images/e-book.png"
                           Width="50" />
                        <TextBlock Text="{Binding RandomBookList[1].Title, UpdateSourceTrigger=PropertyChanged}"
                                   FontSize="16"
                                   Margin="20 5 20 0"/>
                        <TextBlock Text="{Binding RandomBookList[1].Category,UpdateSourceTrigger=PropertyChanged}"
                                   Margin="20 5 0 20"
                                   FontSize="13"/>
                    </StackPanel>
                    <Border Grid.Column="2"
                            Background="White"
                            HorizontalAlignment="Center"
                            Opacity="0.4"
                            Width="160"
                            CornerRadius="14" />
                    <StackPanel Grid.Column="2"
                                Margin="0 5 0 0">
                        <Image Source="/Resources/Images/e-book.png"
                           Width="50"/>
                        <TextBlock Text="{Binding RandomBookList[2].Title, UpdateSourceTrigger=PropertyChanged}"
                                   FontSize="16"
                                   Margin="20 5 20 0"/>
                        <TextBlock Text="{Binding RandomBookList[2].Category,UpdateSourceTrigger=PropertyChanged}"
                                   Margin="20 5 0 20"
                                   FontSize="13"/>
                    </StackPanel>
                    <Border Grid.Column="3"
                            Background="White"
                            HorizontalAlignment="Center"
                            Opacity="0.4"
                            Width="160"
                            CornerRadius="14" />
                    <StackPanel Grid.Column="3"
                                Margin="0 5 0 0">
                        <Image Source="/Resources/Images/e-book.png"
                           Width="50"/>
                        <TextBlock Text="{Binding RandomBookList[3].Title, UpdateSourceTrigger=PropertyChanged}"
                                   FontSize="16"
                                   Margin="20 5 20 0"/>
                        <TextBlock Text="{Binding RandomBookList[3].Category,UpdateSourceTrigger=PropertyChanged}"
                                   Margin="20 5 0 20"
                                   FontSize="13"/>
                    </StackPanel>
                    <Border Grid.Column="4"
                            Background="White"
                            HorizontalAlignment="Center"
                            Opacity="0.4"
                            Width="160"
                            CornerRadius="14" />
                    <StackPanel Grid.Column="4"
                                Margin="0 5 0 0">
                        <Image Source="/Resources/Images/e-book.png"
                           Width="50"/>
                        <TextBlock Text="{Binding RandomBookList[4].Title, UpdateSourceTrigger=PropertyChanged}"
                                   FontSize="16"
                                   Margin="20 5 20 0"/>
                        <TextBlock Text="{Binding RandomBookList[4].Category,UpdateSourceTrigger=PropertyChanged}"
                                   Margin="20 5 0 20"
                                   FontSize="13"/>
                    </StackPanel>
                </Grid>
            </Grid>

            <!--// TOP BOOKS - PANEL //-->
            <Grid Grid.Row="1"
                  Margin="0 10 0 0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="0.16*" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <!--// top books - text//-->
                <TextBlock Text="Top books"
                           HorizontalAlignment="Left"
                           VerticalAlignment="Bottom"
                           Foreground="White"
                           FontSize="20" />

                <!--// top books - listview //-->
                <components:BooksListView Grid.Row="1"
                                          Margin="0 10 0 0" />

            </Grid>
        </Grid>

        <!--// CONTENT CONTROL //-->
        <ContentControl Content="{Binding SelectedViewModel}"
                        Grid.RowSpan="2"/>
    </Grid>
</UserControl>
