<UserControl x:Class="Library.UI.View.LibraryView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:i="http://schemas.microsoft.com/xaml/behaviors" 
             xmlns:library="clr-namespace:Library.UI.Resources.Library" 
             xmlns:components="clr-namespace:Library.UI.View.Components"
             mc:Ignorable="d" 
             d:DesignHeight="620" d:DesignWidth="920"
             FontFamily="Titillium Web">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.2*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!--// NAVIGATION PANEL //-->
        <components:NavigationPanel />
        
        <!--// MAIN BACKGROUND //-->
        <Border Grid.Column="1"
                Opacity="1"
                CornerRadius="0 4 4 0">
            <Border.Background>
                <ImageBrush ImageSource="https://i.pinimg.com/736x/78/be/5d/78be5dd68cde3f3616c7304c2b158a45.jpg"
                            Stretch="UniformToFill" 
                            RenderOptions.BitmapScalingMode="Fant"/>
            </Border.Background>
        </Border>
        <Border Grid.Column="1"
                Background="#052a4f"
                Opacity="0.9" />

        <!--// MAIN //-->
        <Grid Grid.Column="1"
              Margin="5 5 5 5">
            <Grid.RowDefinitions>
                <RowDefinition Height="0.53*" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <!--// FOR YOU - PANEL //-->
            <components:ForYouPanel Margin="10 20 10 25" />

            <!--// TOP BOOKS - PANEL //-->
            <components:TopBooksPanel Grid.Row="1"
                                      Margin="10 10 10 20" />
        </Grid>

        <!--// CONTENT CONTROL //-->
        <ContentControl Grid.ColumnSpan="2"
                        Content="{Binding SelectedViewModel}" />
    </Grid>
</UserControl>
