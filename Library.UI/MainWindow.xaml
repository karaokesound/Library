<Window x:Class="Library.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:view="clr-namespace:Library.UI.View"
        mc:Ignorable="d"
        AllowsTransparency="False"
        WindowStyle="None" 
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        Background="Transparent"
        Height="550" Width="800">
    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="booleanToVisibilityConverter" />
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.13*" />
            <RowDefinition Height="0.41*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="0.41*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.4*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="0.4*" />
        </Grid.ColumnDefinitions>

        <!--// MAIN BACKGROUND //-->
        <Border Grid.RowSpan="4"
                Grid.ColumnSpan="3"
                Background="White" />
        <Image Grid.RowSpan="4"
               Grid.ColumnSpan="3"
               Source="https://cdn.pixabay.com/photo/2019/03/26/10/46/artificial-4082314_960_720.jpg" />

        <!--// BORDER //-->
        <Border Grid.ColumnSpan="3"
                Grid.RowSpan="4"
                BorderBrush="Black"
                BorderThickness="0.3" />

        <!--// TOP BAR //-->
        <Border Grid.ColumnSpan="3"
                MouseDown="Border_MouseDown"
                Background="White" />

        <!--// TOP BAR BUTTONS //-->
        <StackPanel Grid.ColumnSpan="3"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right">
            <Button Content="-"
                    Click="MinimizeButton_Click"
                    Width="25"/>
            <Button Content="X"
                    Click="ExitButton_Click"
                    Width="25"/>
        </StackPanel>

        <!--// SIGN UP PANEL //-->
        <view:SignUpPanelView Grid.Column="1"
                              Grid.Row="1"
                              Grid.RowSpan="2"
                              Margin="0 10 0 0"
                              DataContext="{Binding SignUpPanelVM}" />

        <!--// SIGN IN, SIGN UP //-->
        <Grid Grid.Row="2"
              Grid.ColumnSpan="3"
              Grid.RowSpan="2"
              DataContext="{Binding SignUpPanelVM}"
              Visibility="{Binding MainWindowButtonVisibility,Converter={StaticResource booleanToVisibilityConverter}}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="0.41*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="0.41*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="0.94*" />
            </Grid.RowDefinitions>
            <Border Grid.Row="1"
                    Width="150"
                    Height="50"
                    Opacity="0.45"
                    Background="White"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Top"
                    Margin="0 26 0 0"/>
            <Button Grid.Row="1"
                    Style="{StaticResource loginButton}"
                    Content="Sign In"
                    HorizontalAlignment="Right" />
            <Border Grid.Column="2"
                    Grid.Row="1"
                    Width="150"
                    Height="50"
                    Opacity="0.45"
                    Background="White"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    Margin="0 26 0 0"/>
            <Button Grid.Column="2"
                    Grid.Row="1"
                    Command="{Binding SignUpButtonCommand}"
                    Style="{StaticResource loginButton}"
                    Content="Sign Up"
                    HorizontalAlignment="Left" />
        </Grid>

        <!--// FORGOT PASSWORD //-->
        <Border Grid.Row="3"
                Grid.Column="1"
                DataContext="{Binding SignUpPanelVM}"
                Visibility="{Binding MainWindowButtonVisibility,Converter={StaticResource booleanToVisibilityConverter}}"
                Width="150"
                Height="30"
                Opacity="0.45"
                Margin="0 10 0 0"
                Background="White"
                HorizontalAlignment="Center"
                VerticalAlignment="Top"/>
        <TextBlock Grid.Row="3"
                   Grid.Column="1"
                   DataContext="{Binding SignUpPanelVM}"
                   Visibility="{Binding MainWindowButtonVisibility,Converter={StaticResource booleanToVisibilityConverter}}"
                   Text="Forgot password?"
                   FontSize="17"
                   Margin="0 10 0 0"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Top"/>

        <!--// CONTENT CONTROL //-->
        <ContentControl Content="{Binding SelectedViewModel}"
                        Grid.Row="1"
                        Grid.RowSpan="3"
                        Grid.ColumnSpan="3" />
    </Grid>
</Window>
